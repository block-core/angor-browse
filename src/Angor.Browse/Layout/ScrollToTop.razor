@inject IJSRuntime Js;

<!-- Return to Top -->
<button type="button" id="scrollToTopBtn" class="fixed bottom-5 z-10 hidden animate-bounce ltr:right-5 rtl:left-5"
        @onclick="Scroll">
    <div class="group flex h-14 w-14 items-center justify-center rounded-full border border-black/20 bg-black text-white transition duration-500 hover:bg-secondary dark:bg-primary dark:hover:bg-secondary">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
             stroke="currentColor" class="h-6 w-6 transition group-hover:text-black">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 15.75l7.5-7.5 7.5 7.5" />
        </svg>
    </div>
</button>




@code {
    private async Task Scroll()
    {
        try
        {

            await Js.InvokeVoidAsync("myInterop.scrollToTop");
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"Error calling scrollToTop: {ex.Message}");
        }
    }
}