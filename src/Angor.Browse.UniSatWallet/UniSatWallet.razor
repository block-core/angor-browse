@page "/unisatwallet"
@using Microsoft.JSInterop
@inject IJSRuntime JSRuntime;

<PageTitle>UniSat Wallet</PageTitle>

<h1>UniSat Wallet!</h1>
@if (!HasUniSatWallet)
{
	<p>No UniSat Wallet detected. Please install <a href="https://chromewebstore.google.com/detail/unisat-wallet/ppbibelpcjmhbdihakflkdcoccbgbkpo" target="_blank">UniSat Wallet</a>.</p>
}

else
{
	<button class="btn btn-primary" @onclick="@(() => SignMessage("message"))">Ask for Signing (Message)</button>
	<br />
	<div class="form-control mt-3 p-3">
		<p>@SignedMessage</p>
	</div>

	<hr />

	<button class="btn btn-primary" @onclick="@(() => SignMessageAnyAccount("message"))">Signing (text)</button>
	<br />
	<div class="form-control mt-3 p-3">
		<p>@SignedMessageAnyAccount</p>
	</div>

	<hr />

	<button class="btn btn-primary" @onclick="@(() => SignMessageAnyAccountJson("{ \"id\": 5, \"text\": \"Hello World\" }"))">Signing (Json)</button>
	<br />
	<div class="form-control mt-3 p-3">
		<p>@SignedMessageAnyAccountJson</p>
	</div>

	<hr />

	<button class="btn btn-primary" @onclick="@(() => PaymentRequest("BTC","2"))">Payment Request</button>
	<br />
	<div class="form-control mt-3 p-3">
		<p>@PaymentRequestResult</p>
	</div>

	<hr />

	<button class="btn btn-primary" @onclick="@(() => DIDSupportedMethods())">Supported DID Methods</button>
	<br />
	<div class="form-control mt-3 p-3">
		<p>@DIDSupportedMethodsResult</p>
	</div>
	
	<hr />

	<button class="btn btn-primary" @onclick="@(() => DIDRequest(@arr))">Select DID Request</button>
	<br />
	<div class="form-control mt-3 p-3">
		<p>@DIDRequestResult</p>
	</div>
	


	
}
